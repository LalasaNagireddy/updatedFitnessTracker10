<!-- This heading indicates the section for adding sleeping hours -->
<h1>Add Sleeping Hours</h1>

<!-- This form_with helper generates a form for adding sleeping hours -->
<%= form_with(model: @sleeping, url: sleepings_path, local: true) do |form| %>

  <!-- This label prompts the user to enter their sleeping hours -->
  <%= form.label :value, "Enter Your Sleeping Hours:" %>

  <!-- This number_field generates an input field for entering the sleeping hours -->
  <%= form.number_field :value %>

  <!-- This submit button allows the user to submit their sleeping hours -->
  <%= form.submit "Submit Hours" %>

<% end %>
