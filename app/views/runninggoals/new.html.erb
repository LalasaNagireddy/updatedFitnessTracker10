<!-- This heading indicates the section for adding a running mile goal -->
<h1>Add Running Mile GOAL</h1>

<!-- This form_with helper generates a form for adding a running mile goal -->
<%= form_with(model: @runninggoal, url: runninggoals_path, local: true) do |form| %>

  <!-- This label prompts the user to enter their running mile goal -->
  <%= form.label :value, "Enter Your Mile Goals:" %>

  <!-- This number_field generates an input field for entering the running mile goal -->
  <%= form.number_field :value %>

  <!-- This submit button allows the user to submit their running mile goal -->
  <%= form.submit "Submit Miles" %>

<% end %>
