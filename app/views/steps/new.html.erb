<!-- This heading indicates the section for adding steps -->
<h1>Add Steps</h1>

<!-- This form_with helper generates a form for adding steps -->
<%= form_with(model: @step, url: steps_path, local: true) do |form| %>

  <!-- This label prompts the user to enter their steps -->
  <%= form.label :value, "Enter Steps:" %>

  <!-- This number_field generates an input field for entering the steps -->
  <%= form.number_field :value %>

  <!-- This submit button allows the user to submit their steps -->
  <%= form.submit "Add Steps" %>

<% end %>
