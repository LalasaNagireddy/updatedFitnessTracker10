<!-- This heading indicates the section for adding strength hours -->
<h1>Add Strength Hours</h1>

<!-- This form_with helper generates a form for adding strength hours -->
<%= form_with(model: @strength, url: strengths_path, local: true) do |form| %>

  <!-- This label prompts the user to enter their strength hours -->
  <%= form.label :value, "Enter Strength Hours:" %>

  <!-- This number_field generates an input field for entering the strength hours -->
  <%= form.number_field :value %>

  <!-- This submit button allows the user to submit their strength hours -->
  <%= form.submit "Add Strength Hours" %>

<% end %>
