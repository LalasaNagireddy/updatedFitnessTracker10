<!-- This heading indicates the section for displaying past inputs -->
<h1>Past Inputs</h1>

<!-- This section displays past step inputs -->
<h2>Steps</h2>
<% @steps.each do |step| %>
  <p>Step: <%= step.id %>, Date: <%= step.created_at %>, Value: <%= step.value %> steps</p>
<% end %>

